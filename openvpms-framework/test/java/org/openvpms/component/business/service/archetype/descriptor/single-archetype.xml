<archetypes>
	<archetype name="openvpms-party-address.location.1.0"
		type="org.openvpms.component.business.domain.im.party.Address">
		<node name="deails" path="/details"
			type="org.openvpms.component.business.domain.im.datatypes.basic.DynamicAttributeMap"
			minCardinality="1" maxCardinality="1">
			<node name="address" path="/details/address"
				type="java.lang.String" minCardinality="1" />
			<node name="suburb" path="/details/suburb"
				type="java.lang.String">
				<assertion type="refDataAssertion">
					<property key="type" value="openvpms.suburb" />
					<property key="state" value="/details/state" />
					<errorMessage >This is an error</errorMessage>
				</assertion>
			</node>
			<node name="postcode" path="/details/postcode"
				type="java.lang.String">
				<assertion type="referenceData">
					<property key="Mr" value="Mr" />
					<property key="Ms" value="Ms" />
					<property key="Mrs" value="Mrs" />
					<property key="Dr" value="Dr" />
					<errorMessage >This is an error</errorMessage>
				</assertion>
			</node>
			<node name="state" path="/details/state"
				type="java.lang.String" defaultValue="Victoria"
				minCardinality="1">
				<assertion type="referenceData">
					<property key="queryName" value="openvpms.state" />
					<property key="country" value="/details/country" />
					<errorMessage >This is an error</errorMessage>
				</assertion>
			</node>
			<node name="country" path="/details/country"
				type="java.lang.String" defaultValue="Australia"
				minCardinality="1">
				<assertion type="referenceData">
					<property key="queryName" value="openvpms.country" />
					<errorMessage >This is an error</errorMessage>
				</assertion>
			</node>
		</node>
	</archetype>
</archetypes>