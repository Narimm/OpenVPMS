<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.lookup.Lookup"
    table="lookups">
    <id name="uid" type="long" unsaved-value="-1">
      <column name="lookup_id" index="lookup_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <component name="archetypeId">
      <property name="namespace" access="property" column="arch_namespace"
        type="string" />
      <property name="rmName" access="property" column="arch_rm_name"
        type="string" />
      <property name="concept" access="property" column="arch_concept_name"
        type="string" />
      <property name="entityName" access="property" column="arch_entity_name"
        type="string" />
      <property name="version" access="property" column="arch_version"
        type="string" />
    </component>
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="value" access="property" column="value" type="string" />
    <property name="code" access="property" column="code" type="string" />
    <property name="details" access="property" column="details" length="5000"
      type="org.openvpms.component.business.dao.hibernate.usertype.DynamicAttributeMapUserType" />
  </class>

  <query name="lookup.getRowCount">
    <![CDATA[
			select count(lookup) from org.openvpms.component.business.domain.im.lookup.Lookup as 
			lookup
		]]>
  </query>

  <query name="lookup.getLookupForConceptAndValue">
    <![CDATA[
			from org.openvpms.component.business.domain.im.lookup.Lookup as 
			lookup where lookup.archetypeId.concept = :concept and lookup.value =:value
		]]>
  </query>

  <query name="lookup.getByConcept">
    <![CDATA[
			from org.openvpms.component.business.domain.im.lookup.Lookup as 
			lookup where lookup.archetypeId.concept = :concept
		]]>
  </query>
</hibernate-mapping>