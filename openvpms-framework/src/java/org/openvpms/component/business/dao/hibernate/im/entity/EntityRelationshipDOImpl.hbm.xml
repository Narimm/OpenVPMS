<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openvpms.component.business.dao.hibernate.im.entity.EntityRelationshipDOImpl"
           proxy="org.openvpms.component.business.dao.hibernate.im.entity.EntityRelationshipDO"
           table="entity_relationships">
        <cache usage="read-write"/>
        <id name="id" type="long" unsaved-value="-1">
            <column name="entity_relationship_id"/>
            <generator class="native"/>
        </id>
        <version name="version" type="long"/>
        <property name="linkId" type="string" not-null="true" length="36"/>
        <component name="archetypeId">
            <property name="shortName" column="arch_short_name"
                      type="string" length="100" not-null="true"/>
            <property name="version" column="arch_version"
                      type="string" length="100" not-null="true"/>
        </component>
        <property name="name" column="name" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="activeStartTime" column="active_start_time"
                  type="timestamp"/>
        <property name="activeEndTime" column="active_end_time"
                  type="timestamp"/>
        <property name="sequence" column="sequence" type="integer" not-null="true"/>
        <many-to-one name="source"
                     class="org.openvpms.component.business.dao.hibernate.im.entity.EntityDOImpl"
                     column="source_id"/>
        <many-to-one name="target"
                     class="org.openvpms.component.business.dao.hibernate.im.entity.EntityDOImpl"
                     column="target_id"/>
        <many-to-one name="identity" column="identity_id" cascade="none"
                     class="org.openvpms.component.business.dao.hibernate.im.entity.EntityIdentityDOImpl"/>
        <map name="details" access="field" table="entity_relationship_details"
             lazy="false" batch-size="50" cascade="all,delete-orphan">
            <key column="entity_relationship_id"/>
            <map-key column="name" type="string"/>
            <composite-element
                    class="org.openvpms.component.business.domain.im.datatypes.basic.TypedValue">
                <property name="type" not-null="true"/>
                <property name="value" length="5000" not-null="true"/>
            </composite-element>
        </map>
    </class>
</hibernate-mapping>