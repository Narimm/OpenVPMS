<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.openvpms.component.business.dao.hibernate.im.security.ArchetypeAuthorityDOImpl"
           proxy="org.openvpms.component.business.dao.hibernate.im.security.ArchetypeAuthorityDO"
           table="granted_authorities">
        <id name="id" type="long" unsaved-value="-1">
            <column name="granted_authority_id"/>
            <generator class="native"/>
        </id>
        <version name="version" type="long"/>
        <property name="linkId" type="string" not-null="true" length="36"/>
        <component name="archetypeId">
            <property name="shortName" column="arch_short_name"
                      type="string" length="100" not-null="true"/>
            <property name="version" column="arch_version"
                      type="string" length="100" not-null="true"/>
        </component>
        <property name="name" column="name" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="active" column="active" type="boolean"/>
        <property name="serviceName" column="service_name" type="string"/>
        <property name="method" column="method" type="string"/>
        <property name="shortName" column="archetype" type="string"
                  length="100"/>
    </class>
</hibernate-mapping>