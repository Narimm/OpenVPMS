<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.service.archetype.descriptor.PropertyDescriptor"
		table="property_descriptor">
		<id name="uid" type="long" unsaved-value="-1">
			<column name="property_desc_id"
				index="property_desc_id_idx" />
			<generator class="increment" />
		</id>
		<version name="version" access="property" type="long" />
		<property name="linkId" access="property" type="string" />
		<property name="key" access="property" column="key_name"
			type="string" />
		<property name="type" access="property" column="property_type"
			type="string" />
		<property name="value" access="property" column="value_name"
			type="string" />
	</class>

	<query name="propertyDescriptor.getRowCount">
		<![CDATA[
			select count(propertyDescriptor) from org.openvpms.component.business.service.archetype.descriptor.PropertyDescriptor as 
			propertyDescriptor
		]]>
	</query>

</hibernate-mapping>