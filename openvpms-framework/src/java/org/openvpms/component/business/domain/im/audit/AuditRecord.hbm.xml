<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.audit.AuditRecord"
    table="audit_records">
    <id name="uid" type="long" unsaved-value="-1">
      <column name="audit_id"/>
      <generator class="native" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="archetypeId" access="property" column="archetype_id"
      type="string" />
    <property name="timeStamp" access="property" column="time_stamp"
      type="timestamp" />
    <property name="objectId" access="property" column="object_id" type="long" />
    <property name="service" access="property" column="service" type="string" />
    <property name="operation" access="property" column="operation"
      type="string" />
    <property name="user" access="property" column="user" type="string" />
  </class>

  <query name="audit.getById">
    <![CDATA[
      from org.openvpms.component.business.domain.im.audit.AuditRecord as
      auditRecord where auditRecord.id = :id
    ]]>
  </query>

  <query name="audit.getByObjectId">
    <![CDATA[
      from org.openvpms.component.business.domain.im.audit.AuditRecord as 
      auditRecord where auditRecord.archetypeId = :archetypeId and auditRecord.objectId = :objectId
    ]]>
  </query>

  <query name="audit.getRowCount">
    <![CDATA[
      select count(auditRecord) from org.openvpms.component.business.domain.im.audit.AuditRecord as 
      auditRecord
    ]]>
  </query>
</hibernate-mapping>