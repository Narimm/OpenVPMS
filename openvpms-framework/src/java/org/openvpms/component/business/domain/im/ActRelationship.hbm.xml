<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.ActRelationship"
    table="act_relationship">
    <id name="id" type="string" unsaved-value="null">
      <column name="act_relationship_id"
        index="act_relationship_id_idx" />
      <generator class="assigned" />
    </id>
    <version name="version" access="field" type="long" />
    <component name="archetypeDetails">
      <component name="archetypeID">
        <property name="value" column="archetype_id" type="string" />
      </component>
      <property name="referenceModelVersion" column="rm_version"
        type="string" />
    </component>
    <component name="name">
      <property name="value" column="name" type="string" />
    </component>
    <property name="archetypeNodeId" column="archetype_node_id"
      type="string" />
    <property name="sequence" type="int" column="sequence" />
    <property name="negationInd" type="boolean" column="negation_ind" />
    <property name="parentChildRelationship" type="boolean"
      column="parent_child_relationship" />
    <many-to-one name="sourceAct" column="source_act_id" />      
    <many-to-one name="targetAct" column="target_act_id" />
    <property name="details" column="details" length="5000"
      type="org.openvpms.component.business.dao.hibernate.usertype.ItemListUserType" />
  </class>
</hibernate-mapping>