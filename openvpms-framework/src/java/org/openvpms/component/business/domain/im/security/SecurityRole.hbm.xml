<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.security.SecurityRole"
    table="security_roles">
    <cache usage="read-write" />
    <id name="uid" type="long" unsaved-value="-1">
      <column name="security_role_id" index="security_role_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" length="100" />
    <component name="archetypeId">
      <property name="namespace" access="property" column="arch_namespace"
        type="string" length="100" />
      <property name="rmName" access="property" column="arch_rm_name"
        type="string" length="100" />
      <property name="concept" access="property" column="arch_concept_name"
        type="string" length="100" />
      <property name="entityName" access="property" column="arch_entity_name"
        type="string" length="100" />
      <property name="version" access="property" column="arch_version"
        type="string" length="100" />
    </component>
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <set name="users" table="user_roles" inverse="true">
      <key column="security_role_id" />
      <many-to-many
        class="org.openvpms.component.business.domain.im.security.User"
        column="user_id" outer-join="auto" />
    </set>
    <set name="authorities" inverse="false" table="roles_authorities"
         cascade="none">
      <key column="security_role_id" not-null="true"/>
      <many-to-many
        class="org.openvpms.component.business.domain.im.security.ArchetypeAwareGrantedAuthority" 
        column="authority_id" outer-join="auto" />
    </set>
  </class>

  <query name="securityRole.getAllRoles">
    <![CDATA[
			from org.openvpms.component.business.domain.im.security.SecurityRole as 
			role
		]]>
  </query>

  <query name="securityRole.getRowCount">
    <![CDATA[
			select count(role) from org.openvpms.component.business.domain.im.security.SecurityRole as 
			role
		]]>
  </query>

  <query name="securityRole.getByName">
    <![CDATA[
            from org.openvpms.component.business.domain.im.security.SecurityRole as 
            role where role.name = :name
    ]]>
  </query>
</hibernate-mapping>