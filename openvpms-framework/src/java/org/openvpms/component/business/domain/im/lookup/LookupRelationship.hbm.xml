<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.lookup.LookupRelationship"
    table="lookup_relationship">
    <id name="uid" access="field" type="int" unsaved-value="null">
      <column name="lookup_relationship_id" index="lookup_Relationship_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="field" type="long" />
    <property name="type" access="field" column="type" type="string" />
    <component name="source" access="field">
      <property name="uid" column="source" type="string" />
    </component>
    <component name="target" access="field">
      <property name="uid" column="target" type="string" />
    </component>
  </class>

  <query name="lookupRelationship.getRowCount">
    <![CDATA[
			select count(relationship) from org.openvpms.component.business.domain.im.lookup.LookupRelationship as 
			relationship
		]]>
  </query>

  <query name="lookupRelationship.getAllRelationshipsWithId">
    <![CDATA[
			select relationship from org.openvpms.component.business.domain.im.lookup.LookupRelationship relationship
			where target = :id or source = :id
		]]>
  </query>

  <query name="lookupRelationship.getTargetLookups">
    <![CDATA[
			select lookup 
			from org.openvpms.component.business.domain.im.lookup.LookupRelationship relationship
            inner join relationship.target lookup
            where relationship.source = :source and relationship.type = :type			     
		]]>
  </query>

  <query name="lookupRelationship.getSourceLookups">
    <![CDATA[
			select lookup 
			from org.openvpms.component.business.domain.im.lookup.LookupRelationship relationship
            inner join relationship.source lookup
            where relationship.target = :target and relationship.type = :type
		]]>
  </query>
</hibernate-mapping>