<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.lookup.LookupRelationship"
    table="lookup_relationships">
    <id name="uid" access="field" type="long" unsaved-value="-1">
      <column name="lookup_relationship_id" index="lookup_relationship_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="field" type="long" />
    <property name="linkId" access="property" type="string" />
    <component name="archetypeId">
      <property name="namespace" access="property" column="arch_namespace"
        type="string" />
      <property name="rmName" access="property" column="arch_rm_name"
        type="string" />
      <property name="concept" access="property" column="arch_concept_name"
        type="string" />
      <property name="entityName" access="property" column="arch_entity_name"
        type="string" />
      <property name="version" access="property" column="arch_version"
        type="string" />
    </component>
    <property name="active" access="property" column="active" type="boolean" />
    <property name="type" access="field" column="type" type="string"
      index="lookup_relationship_type_source_idx" />
    <many-to-one name="source" column="source" access="field" not-null="true"
      index="lookup_relationship_type_source_idx" />
    <many-to-one name="target" column="target" access="field" not-null="true" />
  </class>

  <query name="lookupRelationship.getRowCount">
    <![CDATA[
			select count(relationship) from org.openvpms.component.business.domain.im.lookup.LookupRelationship as 
			relationship
		]]>
  </query>

  <query name="lookupRelationship.getAllRelationshipsWithId">
    <![CDATA[
			select relationship from org.openvpms.component.business.domain.im.lookup.LookupRelationship relationship
			where target = :id or source = :id
		]]>
  </query>

  <query name="lookupRelationship.getTargetLookups">
    <![CDATA[
			select relationship.target
			from org.openvpms.component.business.domain.im.lookup.LookupRelationship as relationship
            where relationship.type = :type and relationship.source.uid = :uid
		]]>
  </query>

  <query name="lookupRelationship.getSourceLookups">
    <![CDATA[
			select relationship.source
			from org.openvpms.component.business.domain.im.lookup.LookupRelationship as relationship
            where relationship.type = :type and relationship.target.uid = :uid
		]]>
  </query>
</hibernate-mapping>