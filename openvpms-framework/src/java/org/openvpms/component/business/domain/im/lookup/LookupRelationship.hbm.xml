<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.lookup.LookupRelationship"
    table="lookup_relationships">
    <cache usage="read-write" />
    <id name="uid" access="field" type="long" unsaved-value="-1">
      <column name="lookup_relationship_id"/>
      <generator class="native" />
    </id>
    <version name="version" access="field" type="long" />
    <property name="linkId" access="property" type="string" length="36"
            not-null="true" unique="true"/>
    <component name="archetypeId">
      <property name="shortName" access="property" column="arch_short_name"
        type="string" length="100" not-null="true"/>
      <property name="version" access="property" column="arch_version"
        type="string" length="100" not-null="true"/>
    </component>
    <property name="active" access="property" column="active" type="boolean" />
    <component name="source">
      <component name="archetypeId" access="field">
        <property name="shortName" access="property" type="string" length="100"
          column="source_arch_short_name" />
      </component>
      <property name="linkId" access="field" type="string" length="36"
        column="source_linkId" index="lookup_relationship_source_linkId_idx"/>
    </component>
    <component name="target">
      <component name="archetypeId" access="field">
        <property name="shortName" access="property" type="string" length="100"
          column="target_arch_short_name" />
      </component>
      <property name="linkId" access="field" type="string" length="36"
        column="target_linkId" index="lookup_relationship_target_linkId_idx"/>
    </component>
    <map name="details" access="field" table="lookup_relationship_details"
         lazy="false" cascade="all,delete-orphan">
      <key column="lookup_relationship_id"/>
      <map-key column="name" type="string"/>
      <composite-element class="org.openvpms.component.business.domain.im.datatypes.basic.TypedValue">
        <property name="type" not-null="true"/>
        <property name="value" length="5000" not-null="true"/>
      </composite-element>
    </map>
  </class>

  <query name="lookupRelationship.getRowCount">
    <![CDATA[
			select count(relationship) from org.openvpms.component.business.domain.im.lookup.LookupRelationship as 
			relationship
		]]>
  </query>

</hibernate-mapping>