<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.EntityClassification"
    table="entity_classification">
    <id name="id" type="string" unsaved-value="null">
      <column name="entity_classification_id"
        index="entity_classification_id_idx" />
      <generator class="assigned" />
    </id>
    <version name="version" access="field" type="long" />
    <component name="archetypeDetails">
      <component name="archetypeID">
        <property name="value" column="archetype_id" type="string" />
      </component>
      <property name="referenceModelVersion" column="rm_version"
        type="string" />
    </component>
    <component name="name">
      <property name="value" column="name" type="string" />
    </component>
    <property name="archetypeNodeId" column="archetype_node_id"
      type="string" />
    <component name="activePeriod">
      <component name="interval">
        <component name="lower"
          class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
          <property name="calendar" column="start_date" type="calendar"
            access="field" />
        </component>
        <component name="upper"
          class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
          <property name="calendar" column="end_date" type="calendar"
            access="field" />
        </component>
      </component>
    </component>
  </class>
</hibernate-mapping>