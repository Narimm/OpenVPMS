<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.security.ArchetypeAwareGrantedAuthority"
    table="granted_authorities">
    <id name="uid" type="long" unsaved-value="-1">
      <column name="granted_authority_id" index="granted_authority_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" />
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <property name="prefix" access="field" column="prefix" type="string" />
    <property name="serviceName" access="property" column="service_name" type="string" />
    <property name="method" access="property" column="method" type="string" />
    <property name="archetypeShortName" access="property" column="arch_short_name" type="string" />
    <property name="authority" access="property" column="authority" type="string" />
    <many-to-one name="role" column="security_role_id" />
  </class>

  <query name="archetypeAwareGrantedAuthority.getRowCount">
    <![CDATA[
			select count(authority) from org.openvpms.component.business.domain.im.security.ArchetypeAwareGrantedAuthority as 
			authority
		]]>
  </query>
</hibernate-mapping>