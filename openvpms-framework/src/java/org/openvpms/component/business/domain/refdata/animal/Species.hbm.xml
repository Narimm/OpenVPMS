<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.refdata.animal.Species"
		table="animal_species">
		<id name="id" type="int" column="species_id">
			<generator class="increment" />
		</id>
		<property name="name" access="field" column="name"
			type="string" />
		<property name="alternateName" access="field" column="alternate_name"
			type="string" />
		<set name="breeds" access="field" inverse="true" lazy="true" cascade="all">
			<key column="species_id" />
			<one-to-many class="org.openvpms.component.business.domain.refdata.animal.Breed" />
		</set>
	</class>

	<query name="species.getSpeciesByName">
		<![CDATA[
			from org.openvpms.component.business.domain.refdata.animal.Species as 
			species where species.name = :name
		]]>
	</query>
</hibernate-mapping>