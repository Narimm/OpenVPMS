<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping >
    <class name="org.openvpms.component.business.domain.im.party.Contact" table="contact">
        <id name="id" type="string" access="field" unsaved-value="null">
			<column name="id" length="32" index="contact_id_idx" />
			<generator class="uuid.hex"/>
		</id>
		<component name="uid" class="org.openvpms.component.business.domain.im.IMObjectID">
			<property name="value" column="contact_id" type="string" />
		</component>
        <component name="archetypeDetails">
        	<component name="archetypeID">
        		<property name="value" access="field" column="archetype_id" type="string" />
        	</component>
        	<property name="referenceModelVersion" column="rm_version" type="string" />
        </component>
        <component name="name">
        	<property name="value" column="name" type="string" />
        </component>
        <property name="archetypeNodeId" column="archetype_node_id" type="string"/>
        <component name="activePeriod">
			<component name="interval">
				<component name="lower" class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
					<property name="calendar" column="start_date" type="calendar" access="field"/>
				</component>
				<component name="upper" class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
					<property name="calendar" column="end_date" type="calendar" access="field"/>
				</component>
			</component>
		</component>
        <set name="addresses" lazy="false" inverse="true" table="contact_address" cascade="none">
            <key column="contact_id" />
            <many-to-many class="org.openvpms.component.business.domain.im.party.Address"
				column="address_id" outer-join="auto"/>
        </set>
	</class>

	<query name="contact.getContactById">
		<![CDATA[
			from org.openvpms.component.business.domain.im.party.Contact as
			contact where contact.id = :id
		]]>
	</query>

	<query name="contact.getAllContacts">
		<![CDATA[
			from org.openvpms.component.business.domain.im.party.Contact as 
			contact
		]]>
	</query>
</hibernate-mapping>