<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.party.Contact"
    table="contacts">
    <cache usage="read-write" />
    <id name="uid" type="long" unsaved-value="-1">
      <column name="contact_id" index="contact_id_idx" />
      <generator class="native" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" length="100" />
    <many-to-one name="party" column="party_id" />
    <component name="archetypeId">
      <property name="namespace" access="property" column="arch_namespace"
        type="string"  length="100" />
      <property name="rmName" access="property" column="arch_rm_name"
        type="string" length="100" />
      <property name="concept" access="property" column="arch_concept_name"
        type="string" length="100" />
      <property name="entityName" access="property" column="arch_entity_name"
        type="string" length="100"/>
      <property name="version" access="property" column="arch_version"
        type="string" length="100" />
    </component>
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <property name="activeStartTime" access="property"
      column="active_start_time" type="date" />
    <property name="activeEndTime" access="property" column="active_end_time"
      type="date" />
    <map name="details" access="field" table="contact_details" lazy="false"
         cascade="all,delete-orphan">
        <key column="contact_id"/>
        <map-key column="name" type="string"/>
        <composite-element class="org.openvpms.component.business.domain.im.datatypes.basic.TypedValue">
          <property name="type" not-null="true"/>
          <property name="value" length="5000" not-null="true"/>
        </composite-element>
    </map>
    <set name="classifications" access="property" inverse="false"
         table="contact_classifications" cascade="none">
      <key column="contact_id" />
      <many-to-many
        class="org.openvpms.component.business.domain.im.lookup.Lookup"
        column="lookup_id" outer-join="auto" />
    </set>
  </class>

  <query name="contact.getById">
    <![CDATA[
			from org.openvpms.component.business.domain.im.party.Contact as
			contact where contact.id = :id
		]]>
  </query>

  <query name="contact.getAllContacts">
    <![CDATA[
			from org.openvpms.component.business.domain.im.party.Contact as 
			contact
		]]>
  </query>

  <query name="contact.getRowCount">
    <![CDATA[
			select count(contact) from org.openvpms.component.business.domain.im.party.Contact as 
			contact
		]]>
  </query>
</hibernate-mapping>