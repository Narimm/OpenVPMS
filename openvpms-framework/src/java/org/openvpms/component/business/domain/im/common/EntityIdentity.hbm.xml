<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.common.EntityIdentity"
    table="entity_identities">
    <cache usage="read-write" />
    <id name="uid" type="long" unsaved-value="-1">
      <column name="entity_identity_id" index="entity_identity_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" length="100" />
    <many-to-one name="entity" column="entity_id" />
    <component name="archetypeId">
      <property name="namespace" access="property" column="arch_namespace"
        type="string" length="100" />
      <property name="rmName" access="property" column="arch_rm_name"
        type="string" length="100" />
      <property name="concept" access="property" column="arch_concept_name"
        type="string" length="100" />
      <property name="entityName" access="property" column="arch_entity_name"
        type="string" length="100" />
      <property name="version" access="property" column="arch_version"
        type="string" length="100" />
    </component>
    <property name="name" access="property" column="name" type="string" index="entity_identity_name_idx"/>
    <property name="description" access="property" column="description"
      type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <property name="identity" type="string" column="identity" />
    <property name="details" column="details" length="5000"
      type="org.openvpms.component.business.dao.hibernate.usertype.DynamicAttributeMapUserType" />
  </class>

  <query name="entityIdentity.getRowCount">
    <![CDATA[
			select count(entityIdentity) from org.openvpms.component.business.domain.im.common.EntityIdentity as 
			entityIdentity
		]]>
  </query>

  <query name="entityIdentity.getById">
    <![CDATA[
			select entityIdentity from org.openvpms.component.business.domain.im.common.EntityIdentity as 
			entityIdentity where entityIdentity.uid = :uid
		]]>
  </query>
</hibernate-mapping>