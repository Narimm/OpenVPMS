<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping >
    <class name="org.openvpms.component.business.domain.im.Participation" table="participation">
        <id name="id" type="string" unsaved-value="null">
			<column name="participation_id" index="participation_id_idx" />
			<generator class="assigned"/>
		</id>
		<version name="version" access="field" type="long" />
        <component name="archetypeDetails">
        	<component name="archetypeID">
        		<property name="value" column="archetype_id" type="string" />
        	</component>
        	<property name="referenceModelVersion" column="rm_version" type="string" />
        </component>
        <component name="name">
        	<property name="value" column="name" type="string" />
        </component>
        <property name="archetypeNodeId" column="archetype_node_id" type="string"/>
        <property name="sequence" column="sequence" type="int" />
        <property name="description" column="description" type="string" />
        <property name="negationInd" column="negationInd" type="boolean" />
        <property name="mode" column="mode" type="string" />
        <property name="percentage" column="percentage" type="string" />
        <component name="timeInterval">
			<component name="interval">
				<component name="lower"
					class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
					<property name="calendar" column="participation_start_datetime"
						type="calendar" access="field" />
				</component>
				<component name="upper"
					class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
					<property name="calendar" column="participation_end_datetime"
						type="calendar" access="field" />
				</component>
			</component>
		</component>
		<!-- many-to-one name="entity" column="entity_id" not-null="true" /-->
		<many-to-one name="act" column="act_id" not-null="true" />
        <property name="details" column="details" length="5000"
			type="org.openvpms.component.business.dao.hibernate.usertype.ItemListUserType" />
	</class>
</hibernate-mapping>