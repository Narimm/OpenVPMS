<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.common.Participation"
    table="participations">
    <id name="uid" type="long" unsaved-value="-1">
      <column name="participation_id" index="participation_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" />
    <component name="archetypeId">
      <property name="namespace" access="property" column="arch_namespace"
        type="string" />
      <property name="rmName" access="property" column="arch_rm_name"
        type="string" />
      <property name="concept" access="property" column="arch_concept"
        type="string" />
      <property name="entityName" access="property" column="arch_entity_name"
        type="string" />
      <property name="version" access="property" column="arch_version"
        type="string" />
    </component>
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <property name="sequence" column="sequence" access="property" type="int" />
    <property name="mode" column="mode" type="string" />
    <property name="percentage" column="percentage" type="int" />
    <property name="activeStartTime" access="property"
      column="active_start_time" type="date" />
    <property name="activeEndTime" access="property" column="active_end_time"
      type="date" />
    <component name="entity">
      <component name="archetypeId" access="field">
        <property name="qualifiedName" access="property" type="string"
          column="entity_archetype_id" />
      </component>
      <property name="uid" access="field" type="long" column="entity_uid" />
    </component>
    <component name="act">
      <component name="archetypeId" access="field">
        <property name="qualifiedName" access="property" type="string"
          column="act_archetype_id" />
      </component>
      <property name="uid" access="field" type="long" column="act_uid" />
    </component>
    <property name="details" column="details" length="5000"
      type="org.openvpms.component.business.dao.hibernate.usertype.DynamicAttributeMapUserType" />
  </class>

  <query name="participation.getRowCount">
    <![CDATA[
			select count(participation) from org.openvpms.component.business.domain.im.common.Participation as 
			participation
		]]>
  </query>
</hibernate-mapping>