<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.im.archetype.descriptor.AssertionTypeDescriptor"
		table="assertion_type_descriptor">
		<id name="uid" type="long" unsaved-value="-1">
			<column name="assertion_type_desc_id"
				index="assertion_type_id_idx" />
			<generator class="increment" />
		</id>
		<version name="version" access="property" type="long" />
		<property name="linkId" access="property" type="string" />
		<property name="name" access="property" column="name"
			type="string" not-null="true" />
		<component name="archetypeId">
			<property name="namespace" access="property"
				column="arch_namespace" type="string" />
			<property name="rmName" access="property"
				column="arch_rm_name" type="string" />
			<property name="concept" access="property"
				column="arch_concept" type="string" />
			<property name="entityName" access="property"
				column="arch_entity_name" type="string" />
			<property name="version" access="property"
				column="arch_version" type="string" />
			<property name="shortName" access="property"
				column="arch_short_name" type="string" />
		</component>
		<property name="propertyArchetype" access="property" column="property_archetype"
			type="string" not-null="true"/>
		<set name="actionTypes" access="property" lazy="false"
			table="action_type_descriptor" cascade="all,delete-orphan">
			<key column="assertion_type_desc_id"/>
			<one-to-many
				class="org.openvpms.component.business.domain.im.archetype.descriptor.ActionTypeDescriptor" />
		</set>
	</class>

	<query name="assertionTypeDescriptor.getRowCount">
		<![CDATA[
			select count(assertionTypeDescriptor) from org.openvpms.component.business.domain.im.archetype.descriptor.AssertionTypeDescriptor as 
			assertionTypeDescriptor
		]]>
	</query>

	<query name="assertionTypeDescriptor.getByName">
		<![CDATA[
			from org.openvpms.component.business.domain.im.archetype.descriptor.AssertionTypeDescriptor as 
			descriptor where descriptor.name = :name
		]]>
	</query>

	<query name="assertionTypeDescriptor.getAll">
		<![CDATA[
			from org.openvpms.component.business.domain.im.archetype.descriptor.AssertionTypeDescriptor as 
			descriptor
		]]>
	</query>
</hibernate-mapping>