<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.Act"
    table="act">
    <id name="id" type="string" unsaved-value="null">
      <column name="act_id" index="act_id_idx" />
      <generator class="assigned" />
    </id>
    <version name="version" access="field" type="long" />
    <component name="archetypeDetails">
      <component name="archetypeID">
        <property name="value" access="field" column="archetype_id"
          type="string" />
      </component>
      <property name="referenceModelVersion" column="rm_version"
        type="string" />
    </component>
    <component name="name">
      <property name="value" column="name" type="string" />
    </component>
    <property name="archetypeNodeId" column="archetype_node_id"
      type="string" />
    <property name="mood" column="mood" type="string" />
    <property name="title" column="title" type="string" />
    <property name="descritpion" column="description" type="string" />
    <component name="effectiveTime">
      <component name="interval">
        <component name="lower"
          class="org.openehr.rm.datatypes.quantity.datetime.DvDateTime">
          <property name="calendar" column="effective_start_datetime"
            type="calendar" access="field" />
        </component>
        <component name="upper"
          class="org.openehr.rm.datatypes.quantity.datetime.DvDateTime">
          <property name="calendar" column="effective_end_datetime"
            type="calendar" access="field" />
        </component>
      </component>
    </component>
    <component name="activityTime">
      <component name="interval">
        <component name="lower"
          class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
          <property name="calendar" column="activity_start_datetime"
            type="calendar" access="field" />
        </component>
        <component name="upper"
          class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
          <property name="calendar" column="activity_end_datetime"
            type="calendar" access="field" />
        </component>
      </component>
    </component>
    <property name="priority" column="priority" type="string" />
    <property name="reason" column="reason" type="string" />
    <property name="negationInd" column="negation_ind" type="boolean" />
    <property name="repeatNumber" column="repeat_number" type="int" />
    <property name="status" column="status" type="string" />
    <property name="details" column="details" length="5000"
      type="org.openvpms.component.business.dao.hibernate.usertype.ItemListUserType" />
    <set name="participations" access="field" inverse="true">
      <key column="act_id" />
      <one-to-many
        class="org.openvpms.component.business.domain.im.Participation" />
    </set>
    <set name="sourceActRelationships" access="field" inverse="true">
      <key column="source_act_id" />
      <one-to-many
        class="org.openvpms.component.business.domain.im.ActRelationship" />
    </set>
    <set name="targetActRelationships" access="field" inverse="true">
      <key column="target_act_id" />
      <one-to-many
        class="org.openvpms.component.business.domain.im.ActRelationship" />
    </set>
  </class>
</hibernate-mapping>