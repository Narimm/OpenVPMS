<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.Classification"
    table="classification">
    <id name="id" type="string" unsaved-value="null">
      <column name="classification_id" index="classification_id_idx" />
      <generator class="assigned" />
    </id>
    <version name="version" access="field" type="long" />
    <component name="archetypeDetails">
      <component name="archetypeID">
        <property name="value" column="archetype_id" type="string" />
      </component>
      <property name="referenceModelVersion" column="rm_version"
        type="string" />
    </component>
    <component name="name">
      <property name="value" column="name" type="string" />
    </component>
    <property name="archetypeNodeId" column="archetype_node_id"
      type="string" />
    <property name="details" column="details" length="5000" not-null="false"
      type="org.openvpms.component.business.dao.hibernate.usertype.ItemListUserType" />
    <many-to-one name="parent" cascade="none">
      <column name="parent_classification_id" not-null="false" />
    </many-to-one>
    <set name="children" access="field" lazy="true" batch-size="10"
      cascade="all-delete-orphan">
      <key>
        <column name="parent_classification_id"
          index="parent_classification_id_idx" />
      </key>
      <one-to-many
        class="org.openvpms.component.business.domain.im.Classification" />
    </set>
  </class>

  <query name="classification.getRowCount">
    <![CDATA[
			select count(classification) from org.openvpms.component.business.domain.im.Classification as 
			classification
		]]>
  </query>
</hibernate-mapping>