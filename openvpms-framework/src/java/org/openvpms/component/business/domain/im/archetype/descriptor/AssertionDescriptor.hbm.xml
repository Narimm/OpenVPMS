<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.archetype.descriptor.AssertionDescriptor"
    table="assertion_descriptors">
    <id name="uid" type="long" unsaved-value="-1">
      <column name="assertion_desc_id" index="assertion_desc_id_idx" />
      <generator class="native" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" length="100" />
    <property name="name" access="property" column="name" type="string"
      not-null="true" />
    <property name="active" access="property" column="active" type="boolean" />
    <property name="index" access="property" column="assertion_index" type="integer" />
    <property name="errorMessage" access="property" column="error_message"
      type="string" />
    <property name="propertyMap" column="property_map" length="20000"
      type="org.openvpms.component.business.dao.hibernate.usertype.PropertyMapUserType" />
  </class>

  <query name="assertionDescriptor.getRowCount">
    <![CDATA[
			select count(assertionDescriptor) from org.openvpms.component.business.domain.im.archetype.descriptor.AssertionDescriptor as 
			assertionDescriptor
		]]>
  </query>

</hibernate-mapping>