<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.im.archetype.descriptor.ArchetypeDescriptor"
		table="archetype_descriptors">
		<id name="uid" type="long" unsaved-value="-1">
			<column name="archetype_desc_id"/>
			<generator class="native" />
		</id>
		<version name="version" access="property" type="long" />
		<property name="lastModified" access="property"
			column="last_modified" type="timestamp" />
		<property name="linkId" access="property" type="string" length="36"
                  not-null="true" unique="true"/>
		<property name="name" access="property" column="name"
			type="string" length="100" not-null="true" unique="true"/>
        <component name="archetypeId">
            <property name="shortName" access="property"
                column="arch_short_name" type="string" length="100" not-null="true"/>
            <property name="version" access="property"
                column="arch_version" type="string" length="100" not-null="true"/>
        </component>
		<property name="active" access="property" column="active"
			type="boolean" />
		<property name="className" access="property" column="class_name"
			type="string" />
		<property name="displayName" access="property"
			column="display_name" type="string" />
		<property name="latest" access="property" column="is_latest"
			type="boolean" />
		<property name="primary" access="property" column="is_primary"
			type="boolean" />
		<map name="nodeDescriptors" access="property" lazy="false" inverse="true"
			table="node_descriptors" cascade="all,delete-orphan">
			<key column="archetype_desc_id" on-delete="cascade"/>
			<map-key column="name" type="string" />
			<one-to-many
				class="org.openvpms.component.business.domain.im.archetype.descriptor.NodeDescriptor" />
		</map>
	</class>

	<query name="archetypeDescriptor.getRowCount">
		<![CDATA[
			select count(archetype) from org.openvpms.component.business.domain.im.archetype.descriptor.ArchetypeDescriptor as 
			archetype
		]]>
	</query>

	<query name="archetypeDescriptor.getByName">
		<![CDATA[
			from org.openvpms.component.business.domain.im.archetype.descriptor.ArchetypeDescriptor as 
			descriptor where descriptor.name = :name
		]]>
	</query>

	<query name="archetypeDescriptor.getAll">
		<![CDATA[
			from org.openvpms.component.business.domain.im.archetype.descriptor.ArchetypeDescriptor as
			descriptor
		]]>
	</query>
</hibernate-mapping>