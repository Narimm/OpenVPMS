<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping >
    <class name="org.openvpms.component.business.domain.im.party.Address" table="address">
        <id name="id" type="string" unsaved-value="null">
			<column name="address_id" index="address_id_idx" />
			<generator class="assigned"/>
		</id>
        <component name="archetypeDetails">
        	<component name="archetypeID">
        		<property name="value" column="archetype_id" type="string" />
        	</component>
        	<property name="referenceModelVersion" column="rm_version" type="string" />
        </component>
        <component name="name">
        	<property name="value" column="name" type="string" />
        </component>
        <property name="archetypeNodeId" column="archetype_node_id" type="string"/>
        <property name="details" column="details" length="5000"
			type="org.openvpms.component.business.dao.hibernate.usertype.ItemListUserType" />
        <set name="contacts" lazy="false" table="contact_address" inverse="false" cascade="none">
            <key column="address_id" />
            <many-to-many class="org.openvpms.component.business.domain.im.party.Contact"
				column="contact_id" outer-join="auto"/>
        </set>
	</class>

	<query name="address.getAddressById">
		<![CDATA[
			from org.openvpms.component.business.domain.im.party.Address as 
			address where address.id = :id
		]]>
	</query>

	<query name="address.getAllAddresses">
		<![CDATA[
			from from org.openvpms.component.business.domain.im.party.Address as 
			address
		]]>
	</query>

	<query name="address.getRowCount">
		<![CDATA[
			select count(address) from org.openvpms.component.business.domain.im.party.Address as 
			address
		]]>
	</query>
</hibernate-mapping>