<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.refdata.demographics.Suburb"
		table="suburb">
		<id name="id" type="int" column="suburb_id">
			<generator class="increment" />
		</id>
		<property name="name" access="field" column="name"
			type="string"  not-null="true" />
		<property name="postCode" access="field" column="post_code"
			type="string"  not-null="true" unique="true"/>
		<many-to-one  name="state" access="field" column="state_id"/>
	</class>

	<query name="suburb.getSuburbByPostCode">
		<![CDATA[
			from org.openvpms.component.business.domain.refdata.demographics.Suburb as 
			suburb where suburb.postCode = :postCode
		]]>
	</query>
</hibernate-mapping>