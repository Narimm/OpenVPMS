<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.im.common.EntityRelationship"
		table="entity_relationship">
		<id name="uid" type="long" unsaved-value="-1">
			<column name="entity_relationship_id"
				index="entity_relationship_id_idx" />
			<generator class="increment" />
		</id>
		<version name="version" access="property" type="long" />
		<component name="archetypeId">
			<property name="namespace" access="property"
				column="archetype_namespace" type="string" />
			<property name="rmName" access="property"
				column="archetype_rm_name" type="string" />
			<property name="concept" access="property"
				column="archetype_concept" type="string" />
			<property name="entityName" access="property"
				column="archetype_entity_name" type="string" />
			<property name="version" access="property"
				column="archetype_version" type="string" />
		</component>
		<property name="sequence" type="int" column="sequence" />
		<property name="reason" type="string" column="reason" />
		<component name="activePeriod">
			<component name="lower" access="property"
				class="org.openvpms.component.business.domain.im.datatypes.quantity.datetime.DvDateTime">
				<property name="dateTime" column="start_date"
					type="calendar" access="property" />
			</component>
			<component name="upper" access="property"
				class="org.openvpms.component.business.domain.im.datatypes.quantity.datetime.DvDateTime">
				<property name="dateTime" column="end_date"
					type="calendar" access="property" />
			</component>
		</component>
		<many-to-one name="source" access="property" column="source_id" />
		<many-to-one name="target" access="property" column="target_id" />
		<many-to-one name="identity" access="property" 
			column="identity_id" cascade="none"/>
		<property name="details" column="details" length="5000"
			type="org.openvpms.component.business.dao.hibernate.usertype.DynamicAttributeMapUserType" />
	</class>

	<query name="entityRelationship.getRowCount">
		<![CDATA[
			select count(entityRelationship) from org.openvpms.component.business.domain.im.common.EntityRelationship as 
			entityRelationship
		]]>
	</query>
</hibernate-mapping>