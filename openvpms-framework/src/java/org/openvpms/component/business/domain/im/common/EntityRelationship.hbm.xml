<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.common.EntityRelationship"
    table="entity_relationships">
    <cache usage="read-write" />
    <id name="uid" type="long" unsaved-value="-1">
      <column name="entity_relationship_id" index="entity_relationship_id_idx" />
      <generator class="increment" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" length="100" />
    <component name="archetypeId">
      <property name="namespace" access="property" column="arch_namespace"
        type="string" length="100" />
      <property name="rmName" access="property" column="arch_rm_name"
        type="string" length="100" />
      <property name="concept" access="property" column="arch_concept_name"
        type="string" length="100" />
      <property name="entityName" access="property" column="arch_entity_name"
        type="string" length="100" />
      <property name="version" access="property" column="arch_version"
        type="string" length="100" />
    </component>
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <property name="sequence" type="int" column="sequence" />
    <property name="reason" type="string" column="reason" />
    <property name="activeStartTime" access="property"
      column="active_start_time" type="timestamp" />
    <property name="activeEndTime" access="property" column="active_end_time"
      type="timestamp" />
    <component name="source">
      <component name="archetypeId" access="field">
        <property name="qualifiedName" access="property" type="string"
          column="source_archetype_id" />
      </component>
      <property name="linkId" access="field" type="string"
        column="source_linkId"  index="entity_relationship_source_linkId_idx" />
    </component>
    <component name="target">
      <component name="archetypeId" access="field">
        <property name="qualifiedName" access="property" type="string"
          column="target_archetype_id" />
      </component>
      <property name="linkId" access="field" type="string"
        column="target_linkId" index="entity_relationship_target_linkId_idx" />
    </component>
    <many-to-one name="identity" access="property" column="identity_id"
      cascade="none" />
    <property name="details" column="details" length="5000"
      type="org.openvpms.component.business.dao.hibernate.usertype.DynamicAttributeMapUserType" />
  </class>

  <query name="entityRelationship.getRowCount">
    <![CDATA[
			select count(entityRelationship) from org.openvpms.component.business.domain.im.common.EntityRelationship as 
			entityRelationship
		]]>
  </query>

  <query name="entityRelationship.getById">
    <![CDATA[
			select entityRelationship from org.openvpms.component.business.domain.im.common.EntityRelationship as 
			entityRelationship where entityRelationship = :uid
		]]>
  </query>
</hibernate-mapping>