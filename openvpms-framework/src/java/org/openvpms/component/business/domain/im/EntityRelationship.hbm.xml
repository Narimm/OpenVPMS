<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.im.EntityRelationship"
		table="entity_relationship">
		<id name="id" type="string" unsaved-value="null">
			<column name="entity_relationship_id"
				index="entity_relationship_id_idx" />
			<generator class="assigned" />
		</id>
		<version name="version" access="field" type="long" />
		<component name="archetypeDetails">
			<component name="archetypeID">
				<property name="value" column="archetype_id"
					type="string" />
			</component>
			<property name="referenceModelVersion" column="rm_version"
				type="string" />
		</component>
		<component name="name">
			<property name="value" column="name" type="string" />
		</component>
		<property name="archetypeNodeId" column="archetype_node_id"
			type="string" />
		<property name="sequence" type="int" column="sequence" />
		<property name="reason" type="string" column="reason" />
		<component name="activePeriod">
			<component name="interval">
				<component name="lower"
					class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
					<property name="calendar" column="start_date"
						type="calendar" access="field" />
				</component>
				<component name="upper"
					class="org.openehr.rm.datatypes.quantity.datetime.DvDate">
					<property name="calendar" column="end_date"
						type="calendar" access="field" />
				</component>
			</component>
		</component>
		<!-- 
		<component name="sourceEntity">
			<property name="namespace" type="string"
				column="source_namespace" />
			<property name="id" type="string" column="source_id" />
		</component>
		<component name="targetEntity">
			<property name="namespace" type="string"
				column="target_namespace" />
			<property name="id" type="string" column="target_id" />
		</component>
		-->
		<many-to-one name="sourceEntity" access="field" column="source_id" />
		<many-to-one name="targetEntity" access="field" column="target_id" />
		<many-to-one name="entityIdentity" access="field"
			column="entity_identity_id" not-null="false" unique="true" />
		<property name="details" column="details" length="5000"
			type="org.openvpms.component.business.dao.hibernate.usertype.ItemListUserType" />
	</class>

  <query name="entityRelationship.getRowCount">
    <![CDATA[
			select count(entityRelationship) from org.openvpms.component.business.domain.im.EntityRelationship as 
			entityRelationship
		]]>
  </query>
</hibernate-mapping>