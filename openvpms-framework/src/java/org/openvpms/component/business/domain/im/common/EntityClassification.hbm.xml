<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class
    name="org.openvpms.component.business.domain.im.common.EntityClassification"
    table="entity_classification">
    <id name="uid" type="string" unsaved-value="null">
      <column name="entity_classification_id"
        index="entity_classification_id_idx" />
      <generator class="assigned" />
    </id>
    <version name="version" access="field" type="long" />
    <component name="archetypeId">
      <property name="namespace" access="field" column="archetype_namespace"
        type="string" />
      <property name="rmName" access="field" column="archetype_rm_name"
        type="string" />
      <property name="concept" access="field" column="archetype_concept"
        type="string" />
      <property name="entityName" access="field" column="archetype_entity_name"
        type="string" />
      <property name="version" access="field" column="archetype_version"
        type="string" />
    </component>
    <component name="activePeriod">
      <component name="lower" access="field"
        class="org.openvpms.component.business.domain.im.datatypes.quantity.datetime.DvDateTime">
        <property name="dateTime" column="start_date" type="calendar"
          access="field" />
      </component>
      <component name="upper" access="field"
        class="org.openvpms.component.business.domain.im.datatypes.quantity.datetime.DvDateTime">
        <property name="dateTime" column="end_date" type="calendar"
          access="field" />
      </component>
    </component>
  </class>

  <query name="entityClassification.getRowCount">
    <![CDATA[
			select count(entityClassificatio) from org.openvpms.component.business.domain.im.common.EntityClassification as 
			entityClassificatio
		]]>
  </query>
</hibernate-mapping>