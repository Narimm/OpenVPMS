<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.im.product.ProductPrice"
		table="product_prices">
		<id name="uid" type="long" unsaved-value="-1">
			<column name="product_price_id" index="product_price_id_idx" />
			<generator class="increment" />
		</id>
		<version name="version" access="property" type="long" />
		<property name="linkId" access="property" type="string" />
		<component name="archetypeId">
			<property name="namespace" access="property"
				column="arch_namespace" type="string" />
			<property name="rmName" access="property"
				column="arch_rm_name" type="string" />
			<property name="concept" access="property"
				column="arch_concept_name" type="string" />
			<property name="entityName" access="property"
				column="arch_entity_name" type="string" />
			<property name="version" access="property"
				column="arch_version" type="string" />
		</component>
		<property name="fromDate" access="property"
			column="start_time" type="date" />
		<property name="thruDate" access="property"
			column="end_time" type="date" />
		<property name="fixed" access="property" column="is_fixed"
			type="boolean" />
		<property name="price" access="property" column="price"
			type="big_decimal" />
		<many-to-one name="product" column="product_id" />
	</class>

	<query name="productPrice.getById">
		<![CDATA[
			from org.openvpms.component.business.domain.im.product.ProductPrice as
			productPrice where productPrice.id = :id
		]]>
	</query>

	<query name="productPrice.getAll">
		<![CDATA[
			from org.openvpms.component.business.domain.im.product.ProductPrice as 
			productPrice
		]]>
	</query>
	
	<query name="productPrice.getRowCount">
		<![CDATA[
			select count(productPrice) from org.openvpms.component.business.domain.im.product.ProductPrice as 
			productPrice
		]]>
	</query>
</hibernate-mapping>