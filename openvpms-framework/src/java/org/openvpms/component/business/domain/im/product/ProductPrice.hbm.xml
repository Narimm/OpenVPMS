<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.product.ProductPrice"
    table="product_prices">
    <cache usage="read-write" />
    <id name="uid" type="long" unsaved-value="-1">
      <column name="product_price_id"/>
      <generator class="native" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" length="36"
            not-null="true" unique="true"/>
    <component name="archetypeId">
      <property name="shortName" access="property" column="arch_short_name"
        type="string" length="100" not-null="true"/>
      <property name="version" access="property" column="arch_version"
        type="string" length="100" not-null="true"/>
    </component>
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="fromDate" access="property" column="start_time" type="timestamp" />
    <property name="thruDate" access="property" column="end_time" type="timestamp" />
    <property name="fixed" access="property" column="is_fixed" type="boolean" />
    <property name="price" access="property" column="price" type="big_decimal"
              precision="18" scale="3"/>
    <property name="active" access="property" column="active" type="boolean" />
    <map name="details" access="field" table="product_price_details"
         lazy="false" cascade="all,delete-orphan">
      <key column="product_price_id"/>
      <map-key column="name" type="string"/>
      <composite-element class="org.openvpms.component.business.domain.im.datatypes.basic.TypedValue">
        <property name="type" not-null="true"/>
        <property name="value" length="5000" not-null="true"/>
      </composite-element>
    </map>
    <many-to-one name="product" column="product_id" />
    <set name="classifications" access="property" inverse="false"
         table="product_price_classifications" cascade="none">
      <key column="product_price_id" />
      <many-to-many
        class="org.openvpms.component.business.domain.im.lookup.Lookup"
        column="lookup_id" outer-join="auto" />
    </set>
  </class>

  <query name="productPrice.getById">
    <![CDATA[
			from org.openvpms.component.business.domain.im.product.ProductPrice as
			productPrice where productPrice.id = :id
		]]>
  </query>

  <query name="productPrice.getAll">
    <![CDATA[
			from org.openvpms.component.business.domain.im.product.ProductPrice as 
			productPrice
		]]>
  </query>

  <query name="productPrice.getRowCount">
    <![CDATA[
			select count(productPrice) from org.openvpms.component.business.domain.im.product.ProductPrice as 
			productPrice
		]]>
  </query>
</hibernate-mapping>