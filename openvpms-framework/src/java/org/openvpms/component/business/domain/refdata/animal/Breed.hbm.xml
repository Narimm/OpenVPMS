<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.refdata.animal.Breed"
		table="animal_breed">
		<id name="id" type="int" column="breed_id">
			<generator class="increment" />
		</id>
		<property name="name" access="field" column="name"
			type="string" />
		<property name="crossBreed" access="field" column="cross_breed"
			type="boolean" />
		<set name="colours" access="field" lazy="true" table="breed_colour"
			cascade="save-update">
			<key column="breed_id" />
			<many-to-many 
				class="org.openvpms.component.business.domain.refdata.animal.BreedColour"
				column="colour_id" />
		</set>
	</class>

	<query name="breed.getBreedByName">
		<![CDATA[
			from org.openvpms.component.business.domain.refdata.animal.Breed as 
			breed where breed.name = :name
		]]>
	</query>
</hibernate-mapping>