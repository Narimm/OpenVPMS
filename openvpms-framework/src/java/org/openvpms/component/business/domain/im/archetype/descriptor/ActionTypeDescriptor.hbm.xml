<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class
		name="org.openvpms.component.business.domain.im.archetype.descriptor.ActionTypeDescriptor"
		table="action_type_descriptors">
		<id name="uid" type="long" unsaved-value="-1">
			<column name="action_type_desc_id"
				index="action_type_desc_id_idx" />
			<generator class="increment" />
		</id>
		<version name="version" access="property" type="long" />
		<property name="linkId" access="property" type="string" />
		<property name="name" access="property" column="name"
			type="string" not-null="true" />
		<component name="archetypeId">
			<property name="namespace" access="property"
				column="arch_namespace" type="string" />
			<property name="rmName" access="property"
				column="arch_rm_name" type="string" />
			<property name="concept" access="property"
				column="arch_concept_name" type="string" />
			<property name="entityName" access="property"
				column="arch_entity_name" type="string" />
			<property name="version" access="property"
				column="arch_version" type="string" />
			<property name="shortName" access="property"
				column="arch_short_name" type="string" />
		</component>
		<property name="active" access="property" column="active"
			type="boolean" />
		<property name="className" access="property" type="string"
			column="class_name" />
		<property name="methodName" access="property" type="string"
			column="method_name" />
	</class>

	<query name="propertyDescriptor.getRowCount">
		<![CDATA[
			select count(descriptor) from org.openvpms.component.business.domain.im.archetype.descriptor.ActionTypeDescriptor as 
			descriptor
		]]>
	</query>

</hibernate-mapping>