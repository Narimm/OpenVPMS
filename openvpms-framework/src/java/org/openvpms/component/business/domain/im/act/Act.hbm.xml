<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.openvpms.component.business.domain.im.act.Act"
    table="acts">
    <cache usage="read-write" />
    <id name="uid" type="long" unsaved-value="-1">
      <column name="act_id"/>
      <generator class="native" />
    </id>
    <version name="version" access="property" type="long" />
    <property name="linkId" access="property" type="string" length="36"
              not-null="true" unique="true"/>
    <component name="archetypeId">
      <property name="shortName" access="property" column="arch_short_name"
        type="string" length="100" not-null="true"
        index="act_short_name_status_idx" />
      <property name="version" access="property" column="arch_version"
        type="string" length="100" not-null="true"/>
    </component>
    <property name="name" access="property" column="name" type="string" />
    <property name="description" access="property" column="description"
      type="string" />
    <property name="active" access="property" column="active" type="boolean" />
    <property name="title" column="title" type="string" />
    <property name="activityStartTime" column="activity_start_time" type="timestamp"
      index="act_start_time_idx" />
    <property name="activityEndTime" column="activity_end_time" type="timestamp"
      index="act_end_time_idx"/>
    <property name="reason" column="reason" type="string" />
    <property name="status" column="status" type="string"
    	index="act_short_name_status_idx" />
    <map name="details" access="field" table="act_details" lazy="false"
         cascade="all,delete-orphan">
      <key column="act_id"/>
      <map-key column="name" type="string"/>
      <composite-element class="org.openvpms.component.business.domain.im.datatypes.basic.TypedValue">
          <property name="type" not-null="true"/>
          <property name="value" length="5000" not-null="true"/>
       </composite-element>
    </map>
    <set name="sourceActRelationships" access="property" inverse="true"
         lazy="true" batch-size="50"
         cascade="merge,delete,lock,refresh,evict,replicate,delete-orphan">
      <key column="source_linkId" not-null="true" property-ref="linkId" />
      <one-to-many
        class="org.openvpms.component.business.domain.im.act.ActRelationship" />
    </set>
    <set name="targetActRelationships" access="property" inverse="true"
         lazy="true" batch-size="50"
         cascade="merge,delete,lock,refresh,evict,replicate,delete-orphan">
      <key column="target_linkId" not-null="true" property-ref="linkId" />
      <one-to-many
        class="org.openvpms.component.business.domain.im.act.ActRelationship" />
    </set>
    <set name="participations" access="property" inverse="true"
         lazy="true" batch-size="50"
         cascade="all,delete-orphan">
      <key column="act_linkId" not-null="true" property-ref="linkId" />
      <one-to-many
        class="org.openvpms.component.business.domain.im.common.Participation" />
    </set>

    <!-- Mapping for the FinancialAct class -->
    <joined-subclass
      name="org.openvpms.component.business.domain.im.act.FinancialAct"
      table="financial_acts">
      <key column="financial_act_id" on-delete="cascade"/>
      <property name="quantity" access="property" column="quantity"
        type="big_decimal" precision="18" scale="3"/>
      <property name="fixedAmount" access="property" column="fixed_amount"
        type="org.openvpms.component.business.dao.hibernate.usertype.MoneyUserType"
        precision="18" scale="3"/>
      <property name="unitAmount" access="property" column="unit_amount"
        type="org.openvpms.component.business.dao.hibernate.usertype.MoneyUserType"
        precision="18" scale="3"/>
      <property name="taxAmount" access="property" column="tax_amount"
        type="org.openvpms.component.business.dao.hibernate.usertype.MoneyUserType"
        precision="18" scale="3"/>
      <property name="total" access="property" column="total"
        type="org.openvpms.component.business.dao.hibernate.usertype.MoneyUserType"
        precision="18" scale="3"/>
      <property name="allocatedAmount" access="property" column="allocated_amount"
        type="org.openvpms.component.business.dao.hibernate.usertype.MoneyUserType"
        precision="18" scale="3"/>
      <property name="credit" access="property" column="credit" type="boolean" />
      <property name="printed" access="property" column="printed"
        type="boolean" />
    </joined-subclass>

    <!-- Mapping for the DocumentAct class -->
    <joined-subclass
      name="org.openvpms.component.business.domain.im.act.DocumentAct"
      table="document_acts">
      <key column="document_act_id" on-delete="cascade"/>
      <property name="docVersion" access="property" column="doc_version"
        type="string" />
      <property name="fileName" access="property" column="file_name"
        type="string" />
      <property name="mimeType" access="property" column="mime_type"
        type="string" />
      <property name="printed" access="property" column="printed"
        type="boolean" />
      <component name="docReference">
        <component name="archetypeId" access="field">
          <property name="shortName" access="property" type="string"
                    length="100" column="docref_arch_short_name" />
        </component>
        <property name="linkId" access="field" type="string" length="36"
          column="docref_linkId" />
      </component>
    </joined-subclass>
  </class>

  <query name="act.getRowCount">
    <![CDATA[
      select count(act) from org.openvpms.component.business.domain.im.act.Act as 
      act
    ]]>
  </query>
</hibernate-mapping>