                    <topPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <leftPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <bottomPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <rightPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Center">
                    <font size="18" isBold="true" pdfFontName="Helvetica-Bold"/>
                </textElement>
                <text><![CDATA[Sample Patient Form]]></text>
            </staticText>
            <textField pattern="dd/MM/yyyy" isBlankWhenNull="false">
                <reportElement key="textField-3" x="429" y="59" width="102" height="18"/>
                <box>
                    <topPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <leftPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <bottomPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <rightPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                </box>
                <textElement>
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.util.Date"><![CDATA[$F{startTime}]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement key="staticText-3" x="346" y="59" width="81" height="18"/>
                <box>
                    <topPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <leftPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <bottomPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <rightPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                </box>
                <textElement>
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Date]]></text>
            </staticText>
            <textField isBlankWhenNull="false">
                <reportElement key="textField" x="428" y="84" width="27" height="14"/>
                <box>
                    <topPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <leftPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <bottomPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <rightPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Left">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.lang.String"><![CDATA[$V{PAGE_NUMBER} + " of "]]></textFieldExpression>
            </textField>
            <textField evaluationTime="Report" isBlankWhenNull="false">
                <reportElement key="textField" x="455" y="84" width="44" height="14"/>
                <box>
                    <topPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <leftPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <bottomPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <rightPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                </box>
                <textElement textAlignment="Left">
                    <font size="10"/>
                </textElement>
                <textFieldExpression class="java.lang.String">
                    <![CDATA["" + $V{PAGE_NUMBER} + ""]]></textFieldExpression>
            </textField>
            <staticText>
                <reportElement key="staticText-5" x="346" y="84" width="81" height="14"/>
                <box>
                    <topPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <leftPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <bottomPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                    <rightPen lineWidth="0.0" lineStyle="Solid" lineColor="#000000"/>
                </box>
                <textElement>
                    <font size="10"/>
                </textElement>
                <text><![CDATA[Page]]></text>
            </staticText>
            <textField isBlankWhenNull="false">
                <reportElement key="textField-12" x="52" y="44" width="253" height="14"/>
                <textElement/>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{patient.entity.name}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="52" y="62" width="249" height="20"/>
                <textElement/>
                <textFieldExpression class="java.lang.String">
                    <![CDATA[$F{patient.entity.species}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="52" y="84" width="253" height="20"/>
                <textElement/>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{patient.entity.breed}]]></textFieldExpression>
            </textField>
        </band>
    </pageHeader>
    <columnHeader>
        <band splitType="Stretch"/>
    </columnHeader>
    <detail>
        <band height="50">
            <subreport isUsingCache="false">
                <reportElement key="subreport-1" x="6" y="29" width="530" height="21"/>
                <dataSourceExpression>
                    <![CDATA[$P{dataSource}.getExpressionDataSource("history:medication(openvpms:get(.,'patient.entity'))")]]></dataSourceExpression>
                <subreportExpression class="net.sf.jasperreports.engine.JasperReport">
                    <![CDATA["SamplePatientFormItems.jrxml"]]></subreportExpression>
            </subreport>
            <staticText>
                <reportElement x="6" y="9" width="91" height="20"/>
                <textElement/>
                <text><![CDATA[All medication for ]]></text>
            </staticText>
            <textField>
                <reportElement x="97" y="9" width="100" height="20"/>
                <textElement/>
                <textFieldExpression class="java.lang.String"><![CDATA[$F{patient.entity.name}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    <columnFooter>
        <band splitType="Stretch"/>
    </columnFooter>
    <pageFooter>
        <band splitType="Stretch"/>
    </pageFooter>
    <summary>
        <band splitType="Stretch"/>
    </summary>
</jasperReport>
