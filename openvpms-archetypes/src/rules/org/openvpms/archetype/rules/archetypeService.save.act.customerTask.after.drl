<rule-set name="archetypeService.save.act.customerTask.after"
          xmlns="http://drools.org/rules"
          xmlns:java="http://drools.org/semantics/java"
          xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
          xs:schemaLocation="http://drools.org/rules rules.xsd
    				   http://drools.org/semantics/java java.xsd">

    <rule name="Update associated appointment">
        <parameter identifier="act">
            <java:class>org.openvpms.component.business.domain.im.act.Act</java:class>
        </parameter>
        <parameter identifier="service">
            <java:class>org.openvpms.component.business.service.archetype.IArchetypeService</java:class>
        </parameter>
        <java:consequence>
            import org.openvpms.archetype.rules.workflow.AppointmentRules;
            AppointmentRules rules = new AppointmentRules(service);
            rules.updateAppointment(act);
        </java:consequence>

    </rule>

</rule-set> 