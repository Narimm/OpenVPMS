<archetypes>
    <archetype name="entityRelationship.productSupplier.1.0"
               latest="true"
               type="org.openvpms.component.business.domain.im.common.EntityRelationship" displayName="Product Supplier">
        <node name="uid" path="/uid" displayName="id" type="java.lang.Long" hidden="true" readOnly="true"/>
        <node name="name" type="java.lang.String" path="/name"
              hidden="true" minCardinality="1" derived="true"
              derivedValue="concat('ProductSupplier', '')"/>
        <node name="description" type="java.lang.String"
              path="/description" hidden="true" derived="true"
              derivedValue="concat('Product Supplier', '(', date:formatDate(/activeStartTime), ' - ', date:formatDate(/activeEndTime), ')')"/>
        <node name="activeStartTime" displayName="Start Date" path="/activeStartTime"
              type="java.util.Date" minCardinality="1"
              defaultValue="java.util.Date.new()"/>
        <node name="activeEndTime" displayname="End Date" path="/activeEndTime"
              type="java.util.Date" minCardinality="0" />
        <node name="preferred" path="/details/preferred" type="java.lang.Boolean" defaultValue="false()"/>
        <node name="reorderCode" path="/details/reorderCode" type="java.lang.String" minCardinality="0"/>
        <node name="reorderDescription" path="/details/reorderDescription" type="java.lang.String" minCardinality="0"/>
        <node name="barCode" displayName="Reorder Bar Code" path="/details/barCode" type="java.lang.String" minCardinality="0"/>
        <node name="packageSize" path="/details/packageSize" type="java.lang.Integer" minCardinality="0"/>
        <node name="packageUnits" path="/details/packageUnits" type="java.lang.String" minCardinality="0">
            <assertion name="lookup">
                <property name="type" value="lookup"/>
                <property name="source" value="lookup.uom"/>
                <errorMessage>An error message</errorMessage>
            </assertion>
        </node>
        <node name="minimumQty" displayName="Minimum Order Qty" path="/details/minimumOrderQty" type="java.lang.Integer" minCardinality="0"/>
        <node name="orderQtyInc" displayName="Order Qty Increments" path="/details/orderQtyInc" type="java.lang.Integer" minCardinality="0"/>
        <node name="leadTime" displayName="Lead Time" path="/details/leadTime" type="java.lang.Integer" minCardinality="0"/>
        <node name="leadTimeUnits" path="/details/leadTimeUnits" type="java.lang.String" minCardinality="0" defaultValue="'DAYS'">
            <assertion name="lookup.local">
                <propertyList name="entries">
                    <property name="hours" value="hours"/>
                    <property name="DAYS" value="days"/>
                    <property name="WEEKS" value="weeks"/>
                    <property name="MONTHS" value="months"/>
                </propertyList>
                <errorMessage>errorMessage</errorMessage>
            </assertion>
        </node>
        <node name="listPrice" path="/details/listPrice" type="org.openvpms.component.business.domain.im.datatypes.quantity.Money" defaultValue="0.0" minCardinality="0"/>
        <node name="nettPrice" path="/details/nettPrice" type="org.openvpms.component.business.domain.im.datatypes.quantity.Money" defaultValue="0.0" minCardinality="0"/>
        <node name="source" displayName="Product" path="/source"
              type="org.openvpms.component.business.domain.im.common.IMObjectReference" minCardinality="1">
            <assertion name="archetypeRange">
                <propertyList name="archetypes">
                    <propertyMap name="archetype">
                        <property name="shortName"
                                  value="product.medication"/>
                    </propertyMap>
                    <propertyMap name="archetype">
                        <property name="shortName"
                                  value="product.merchandise"/>
                    </propertyMap>
                    <propertyMap name="archetype">
                        <property name="shortName"
                                  value="product.service"/>
                    </propertyMap>
                </propertyList>
                <errorMessage>errorMessage</errorMessage>
            </assertion>
        </node>
        <node name="target" displayName="Supplier" path="/target"
              type="org.openvpms.component.business.domain.im.common.IMObjectReference" minCardinality="1">
            <assertion name="archetypeRange">
                <propertyList name="archetypes">
                    <propertyMap name="archetype">
                        <property name="shortName"
                                  value="party.supplierorganisation"/>
                    </propertyMap>
                    <propertyMap name="archetype">
                        <property name="shortName"
                                  value="party.supplierperson"/>
                    </propertyMap>
                </propertyList>
                <errorMessage>errorMessage</errorMessage>
            </assertion>
        </node>
    </archetype>
</archetypes>
