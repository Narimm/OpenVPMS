<archetypes>
    <archetype name="entity.jobDocumentLoader.1.0" latest="true"
               type="org.openvpms.component.business.domain.im.common.Entity"
               displayName="Job Configuration: Document Loader">
        <node name="id" path="/id" type="java.lang.Long" readOnly="true"/>
        <node name="name" path="/name" type="java.lang.String" minCardinality="1"
              defaultValue="'Document Loader'"/>
        <node name="description" type="java.lang.String" path="/description" minCardinality="0"
              defaultValue="'Periodically loads documents from a directory'"/>
        <node name="active" path="/active" type="java.lang.Boolean" defaultValue="true()"/>
        <node name="class" path="/details/class" type="java.lang.String" minCardinality="1" readOnly="true"
              hidden="true"
              defaultValue="'org.openvpms.web.jobs.docload.DocumentLoaderJob'"/>
        <node name="sourceDir" displayName="Source Directory" path="/details/sourceDir" type="java.lang.String"
              minCardinality="1"/>
        <node name="targetDir" displayName="Destination Directory" path="/details/targetDir" type="java.lang.String"
              minCardinality="1"/>
        <node name="idPattern" path="/details/idPattern" type="java.lang.String" minCardinality="1"
              defaultValue="'[^\d]*(\d+).*'"/>
        <node name="overwrite" displayName="Overwrite Duplicates" path="/details/overwrite" type="java.lang.Boolean"
              minCardinality="1" defaultValue="false()"/>
        <node name="recurse" displayName="Recurse Subdirectories" path="/details/recurse" type="java.lang.Boolean"
              minCardinality="1" defaultValue="false()"/>
        <node name="archetypes" path="/details/archetypes" type="java.lang.String"
              minCardinality="1" defaultValue="'act.*Document*, act.patientInvestigation'"/>
        <node name="log" displayName="Enable Logging" path="/details/log" type="java.lang.Boolean"
              minCardinality="1" defaultValue="false()"/>
        <node name="stopOnError" path="/details/stopOnError" type="java.lang.Boolean" minCardinality="1"
              defaultValue="true()"/>
        <node name="minutes" path="/details/minutes" type="java.lang.String" minCardinality="1" maxLength="50"
              defaultValue="'*/30'"/>
        <node name="hours" path="/details/hours" type="java.lang.String" minCardinality="1" maxLength="50"
              defaultValue="'*'"/>
        <node name="dayOfMonth" path="/details/dayOfMonth" type="java.lang.String" minCardinality="1" maxLength="50"
              defaultValue="'?'"/>
        <node name="month" path="/details/month" type="java.lang.String" minCardinality="1" maxLength="50"
              defaultValue="'*'"/>
        <node name="dayOfWeek" path="/details/dayOfWeek" type="java.lang.String" minCardinality="1" maxLength="50"
              defaultValue="'mon-fri'"/>
        <node name="expression" path="/details/expression" type="java.lang.String" minCardinality="1" derived="true"
              derivedValue="concat('0 ', /details/minutes,' ', /details/hours,' ',/details/dayOfMonth,' ',/details/month,' ',/details/dayOfWeek)"
              hidden="true"/>
        <node name="runAs" path="/sourceEntityRelationships"
              type="java.util.HashSet" baseName="EntityRelationship" minCardinality="1" maxCardinality="1"
              filter="entityRelationship.jobUser"/>
        <node name="notify" path="/sourceEntityRelationships"
              type="java.util.HashSet" baseName="EntityRelationship" minCardinality="1" maxCardinality="1"
              filter="entityRelationship.jobUserGroup"/>
    </archetype>
</archetypes>
