<archetypes>
    <archetype name="party.organisationTill.1.0" latest="true"
               type="org.openvpms.component.business.domain.im.party.Party" displayName="Till">
        <node name="uid" path="/uid" displayName="id" type="java.lang.Long" hidden="true" readOnly="true"/>
        <node name="name" displayName="Name" type="java.lang.String" path="/name" minCardinality="1"/>
        <node name="description" type="java.lang.String"
              path="/description" hidden="true" derived="true"
              derivedValue="concat('LastCleared : ',/details/lastCleared, ' Cash Float : ',/details/tillFloat)"/>
        <node name="tillFloat" path="/details/tillFloat" type="org.openvpms.component.business.domain.im.datatypes.quantity.Money"/>
        <node name="lastCleared" path="/details/lastCleared" type="java.util.Date"/>
        <node name="lastBalance" path="/details/lastBalance" type="org.openvpms.component.business.domain.im.datatypes.quantity.Money"/>
        <node name="active" path="/active" type="java.lang.Boolean" defaultValue="true()" />
        <node name="locations" path="/entityRelationships"
              type="java.util.HashSet" baseName="EntityRelationship" minCardinality="0" maxCardinality="*"
              filter="entityRelationship.locationTill">
            <assertion name="archetypeRange">
                <propertyList name="archetypes">
                    <propertyMap name="archetype">
                        <property name="shortName"
                                  value="entityRelationship.locationTill"/>
                    </propertyMap>
                </propertyList>
                <errorMessage>errorMessage</errorMessage>
            </assertion>
            <assertion name="uniqueEntityRelationship">
                <errorMessage>Duplicate active till location relationship</errorMessage>
            </assertion>
        </node>
        <node name="paymentTypes" path="/classifications" parentChild="false"
              type="java.util.HashSet" baseName="Classification" minCardinality="0" maxCardinality="*">
            <assertion name="archetypeRange">
                <propertyList name="archetypes">
                    <propertyMap name="archetype">
                        <property name="shortName"
                                  value="lookup.paymentType"/>
                    </propertyMap>
                </propertyList>
                <errorMessage>errorMessage</errorMessage>
            </assertion>
        </node>
    </archetype>
</archetypes>
