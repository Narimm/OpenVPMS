<archetypes>
	<archetype name="openvpms-common-entity.documentTemplate.1.0" latest="true"
		type="org.openvpms.component.business.domain.im.common.Entity"  displayName="Document Template" >
		<node name="uid" path="/uid" displayName="id" type="java.lang.Long" hidden="true" readOnly="true" />
		<node name="name" type="java.lang.String" path="/name" minCardinality="1" />
		<node name="description" type="java.lang.String" path="/description" />
		<node name="active" path="/active" type="java.lang.Boolean" defaultValue="true()" />
		<node name="details" path="/details" hidden="true"
			type="org.openvpms.component.business.domain.im.datatypes.basic.DynamicAttributeMap"
			minCardinality="1" maxCardinality="1">
			<node dislayName="Type" name="archetype" path="/details/attributes/archetype" type="java.lang.String"	minCardinality="0" >
				<assertion name="lookup.local">
					<propertyList name="entries">
						<property name="act.patientDocumentForm" value="Patient Form" />
						<property name="act.patientDocumentLetter" value="Patient Letter" />
						<property name="act.customerDocumentForm" value="Customer Form" />
						<property name="act.customerDocumentLetter" value="Customer Letter" />
						<property name="act.supplierDocumentForm" value="Supplier Form" />
						<property name="act.supplierDocumentLetter" value="Supplier Letter" />
						<property name="act.customerAccountPayment" value="Customer Payment" />
						<property name="act.customerAccountRefund" value="Customer Refund" />
						<property name="act.customerAccountChargesInvoice" value="Customer Invoice" />
						<property name="act.customerAccountChargesCredit" value="Customer Credit" />
						<property name="act.customerAccountChargesCounter" value="Customer Counter Sale" />
						<property name="act.customerEstimation" value="Customer Estimation" />
						<property name="act.customerAccountChargesCredit" value="Customer Credit" />
						<property name="act.patientMedication" value="Patient Medication Label" />
						<property name="act.patientClinicalEvent" value="Patient Visit" />
						<property name="act.tillBalance" value="Till Balance" />
						<property name="act.bankDeposit" value="Bank Deposit" />
                        <property name="CUSTOMER_BALANCE" value="Customer Account Balance" />
						<property name="REPORT" value="Report" />
						<property name="SUBREPORT" value="Sub Report" />
					</propertyList>
					<errorMessage>errorMessage</errorMessage>
				</assertion>
			</node>
			<node dislayName="User Level" name="userLevel" path="/details/attributes/userLevel" type="java.lang.String"	minCardinality="0" 
				defaultValue="'0'" >
				<assertion name="lookup.local">
					<propertyList name="entries">
						<property name="0" value="0" />
						<property name="1" value="1" />
						<property name="2" value="2" />
						<property name="3" value="3" />
						<property name="4" value="4" />
						<property name="5" value="5" />
						<property name="6" value="6" />
						<property name="7" value="7" />
						<property name="8" value="8" />
						<property name="9" value="9" />
					</propertyList>
					<errorMessage>errorMessage</errorMessage>
				</assertion>
			</node>
			<node name="reportType" displayName="Report Type" path="/details/attributes/reportType" type="java.lang.String" minCardinality="0" >
				<assertion name="lookup">
					<property name="type" value="lookup" />
					<property name="source" value="lookup.reportType" />
					<errorMessage>An error message</errorMessage>
				</assertion>
			</node>
			<node name="paperSize" displayName="Paper Size" path="/details/attributes/paperSize" type="java.lang.String" minCardinality="0">
				<assertion name="lookup.local">
					<propertyList name="entries">
						<property name="A4" value="A4" />
						<property name="A5" value="A5" />
						<property name="LETTER" value="Letter" />
						<property name="CUSTOM" value="Custom" />
					</propertyList>
					<errorMessage>errorMessage</errorMessage>
				</assertion>
			</node>
           <node name="orientation" path="/details/attributes/orientation" type="java.lang.String"
                   defaultValue="'PORTRAIT'" >
                <assertion name="lookup.local">
                    <propertyList name="entries">
                        <property name="PORTRAIT" value="Portrait" />
                        <property name="LANDSCAPE" value="Landscape" />
                    </propertyList>
                    <errorMessage>errorMessage</errorMessage>
                </assertion>
            </node>
            <node name="paperHeight" displayName="Paper Height" path="/details/attributes/paperHeight" type="java.math.BigDecimal"
	        	defaultValue="0.0"/>
	        <node name="paperWidth" displayName="Paper Width" path="/details/attributes/paperWidth" type="java.math.BigDecimal" 
	        	defaultValue="0.0"/>
			<node name="paperUnits" displayName="Paper Units" path="/details/attributes/paperUnits" type="java.lang.String" minCardinality="0" 
				defaultValue="'MM'" >
				<assertion name="lookup.local">
					<propertyList name="entries">
						<property name="MM" value="Millimetres" />
						<property name="INCH" value="Inches" />
					</propertyList>
					<errorMessage>errorMessage</errorMessage>
				</assertion>
			</node>
            <node name="emailSubject" path="/details/attributes/emailSubject" type="java.lang.String" minCardinality="0"
                maxLength="80"/>
            <node name="emailText" displayName="Email Body" path="/details/attributes/emailText" type="java.lang.String" minCardinality="0"
                maxLength="1000"/>
        </node>
		<node name="printers" path="/entityRelationships"
			type="java.util.HashSet" baseName="EntityRelationship" minCardinality="0" maxCardinality="*" 
			filter="entityRelationship.documentTemplatePrinter" >
			<assertion name="archetypeRange">
				<propertyList name="archetypes">
					<propertyMap name="archetype">
						<property name="shortName"
							value="entityRelationship.documentTemplatePrinter" />
					</propertyMap>
				</propertyList>
				<errorMessage>errorMessage</errorMessage>
			</assertion>
		</node>
        <!--
         This node is now implicit. There is currently no way of representing it.
        <node name="content" path="/participations" type="java.util.HashSet"
              minCardinality="1" maxCardinality="1"
              filter="participation.document"/
         -->
    </archetype>
</archetypes>
