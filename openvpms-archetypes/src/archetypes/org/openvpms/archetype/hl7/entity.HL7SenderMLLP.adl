<archetypes>
    <archetype name="entity.HL7SenderMLLP.1.0" latest="true"
               type="org.openvpms.component.business.domain.im.common.Entity" displayName="HL7 MLLP Sender">
        <node name="id" path="/id" type="java.lang.Long" readOnly="true"/>
        <node name="name" type="java.lang.String" path="/name" minCardinality="1"  maxLength="100">
            <assertion name="propercase"/>
        </node>
        <node name="description" type="java.lang.String" path="/description" derived="true"
              derivedValue="concat('Host: ', /details/host, ', Port: ', /details/port)" hidden="true"/>
        <node name="active" path="/active" type="java.lang.Boolean" defaultValue="true()"/>
        <node name="host" type="java.lang.String" path="/details/host" minCardinality="1"/>
        <node name="port" type="java.lang.Integer" path="/details/port" minCardinality="1"/>
        <node name="sendingApplication" type="java.lang.String" path="/details/sendingApplication" minCardinality="1"
              defaultValue="'OpenVPMS'"/>
        <node name="sendingFacility" type="java.lang.String" path="/details/sendingFacility" minCardinality="1"/>
        <node name="receivingApplication" type="java.lang.String" path="/details/receivingApplication"
              minCardinality="1"/>
        <node name="receivingFacility" type="java.lang.String" path="/details/receivingFacility" minCardinality="1"/>
        <node name="suspended" type="java.lang.Boolean" path="/details/suspended" minCardinality="0"
              defaultValue="false()" hidden="true"/>
        <node name="responseTimeout" type="java.lang.Integer" path="/details/responseTimeout" defaultValue="30"
              minCardinality="0"/>
        <node name="retryInterval" type="java.lang.Integer" path="/details/retryInterval" defaultValue="30"
              minCardinality="0"/>
        <node name="mapping" path="/entityLinks" type="java.util.HashSet" baseName="EntityLink"
              minCardinality="1" maxCardinality="1" filter="entityLink.HL7Mapping"/>
    </archetype>
</archetypes>
