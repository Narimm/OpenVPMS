<archetypes>
    <archetype name="lookup.species.1.0" latest="true"
               type="org.openvpms.component.business.domain.im.lookup.Lookup"
               displayName="Species">
        <node name="id" path="/id" type="java.lang.Long"
              hidden="true" readOnly="true"/>
        <node name="code" path="/code" type="java.lang.String" hidden="true"
              minCardinality="1">
            <assertion name="regularExpression">
                <property name="expression" value="[A-Z0-9_]*"/>
                <errorMessage>Invalid code</errorMessage>
            </assertion>
        </node>
        <node name="name" type="java.lang.String" path="/name" minCardinality="1">
            <assertion name="propercase"/>
        </node>
        <node name="description" type="java.lang.String"
              path="/description" hidden="true" derived="true"
              derivedValue="concat(/name,' ',lookup:isDefault(/defaultLookup))"/>
        <node displayName="Default" name="defaultLookup" type="java.lang.Boolean" path="/defaultLookup"
              defaultValue="false()"/>
        <node name="active" path="/active" type="java.lang.Boolean" defaultValue="true()"/>
        <node name="customFields" type="java.lang.String" path="/details/customFields"
              minCardinality="0" maxCardinality="1"/>
        <node name="source" path="/sourceLookupRelationships" type="java.util.HashSet"
              baseName="sourceLookupRelationship"
              minCardinality="0" maxCardinality="*" filter="lookupRelationship.speciesBreed">
            <assertion name="archetypeRange">
                <propertyList name="archetypes">
                    <propertyMap name="archetype">
                        <property name="shortName" value="lookupRelationship.speciesBreed"/>
                    </propertyMap>
                </propertyList>
            </assertion>
        </node>
        <node name="mapping" path="/sourceLookupRelationships" type="java.util.HashSet"
              baseName="sourceLookupRelationship"
              minCardinality="0" maxCardinality="*" filter="lookupRelationship.speciesMapping">
            <assertion name="archetypeRange">
                <propertyList name="archetypes">
                    <propertyMap name="archetype">
                        <property name="shortName" value="lookupRelationship.speciesMapping"/>
                    </propertyMap>
                </propertyList>
            </assertion>
        </node>
    </archetype>
</archetypes>
